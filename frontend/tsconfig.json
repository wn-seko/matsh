{
  "compilerOptions": {
    "typeRoots": ["./src/typings", "./node_modules/@types"],
    "rootDirs": ["src", "stories"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "ES6",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react"
  },
  "include": ["./src/**/*"],
  "exclude": ["**/*.test.ts*", "node_modules", "build", "scripts"]
}
